function UTWareGetPlayerStores(aPlayer: Integer; aWareType: TKMWareType; ignoreBlock: Boolean): array of Integer;
var
	i: Integer;
	houses: array of Integer;
begin
	houses := States.PlayerGetHouses(aPlayer, UTWareTypeGetStoreHouseType(aWareType, False), True);
	if (aWareType = wtHorse) then
		UTArrayIMerge(houses, States.PlayerGetHouses(aPlayer, htFort, True));
	
	if ignoreBlock then
		Result := houses
	else
	begin
		for i := 0 to High(houses) do
			if (States.HouseWareBlock(houses[i], aWareType) = 0) then
				Utils.ArrayAppendI(Result, houses[i]);
	end;
end;


// Returns the closest house that can take the given resource - optionally, ignores resource input blocks
function UTWareGetClosestPlayerStore(aPlayer, aX, aY: Integer; aWareType: TKMWareType; ignoreBlock: Boolean): Integer;
var
	i: Integer;
	distance, minDistance: Single;
	houses: array of Integer;
begin
	minDistance := 10000;
	Result := -1;
	
	houses := UTWareGetPlayerStores(aPlayer, aWareType, ignoreBlock);
	for i := 0 to High(houses) do
	begin
		distance := Utils.DistanceS(aX - States.HousePositionX(houses[i]), aY - States.HousePositionY(houses[i]));
			if (distance < minDistance) then
			begin
				Result := houses[i];
				minDistance := distance;
			end;
	end;
end;
