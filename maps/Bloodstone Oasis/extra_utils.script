// Checks if the given trigger has already fired. If not and the unit matches the player, displays a message to the player, with optional camera focus on the unit.
procedure UTCheckAreaExploredMessage(var aTriggerFired: Boolean; aPlayer, aUnit: Integer; aMessage: String; aOpen, aFocusCamera: Boolean);
begin
	if aTriggerFired
	or (States.UnitOwner(aUnit) <> aPlayer) then
		Exit;
	
	aTriggerFired := True;
	
	Actions.PlayerMessage(aPlayer, aMessage, aOpen);
	
	if aFocusCamera then
		UTFocusCameraOnUnit(aUnit, 0.0, 0.25);
end;


